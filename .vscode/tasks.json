{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "main.cpp", 
                "--std=c++17", 
                "-o", "main.o", "lib/glad/glad.c", "src/Framework/*.cpp", "src/Event/*.cpp", "src/Component/*.cpp", "src/Event/Game/*.cpp",
                "-I", "include", 
                "-I", "src",
                "-I", "lib",
                "-lglfw",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl"
            ]
        }
    ]
}